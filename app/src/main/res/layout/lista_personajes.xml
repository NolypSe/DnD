<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPersonaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@null"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/companieros_cards"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/txtNombrePersonaje"
                android:layout_width="260dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="115dp"
                android:layout_marginBottom="115dp"
                android:text="Nombre"
                android:textAlignment="textStart"
                android:textColor="#AB966F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRaza"
                android:layout_width="122dp"
                android:layout_height="76dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/mipersonaje" />

            <LinearLayout
                android:layout_width="151dp"
                android:layout_height="108dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="128dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="107dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGeneroPersonaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Genero"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtTrasfondoPersonaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trasfondo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtClasePersonaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clase"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="6dp"
                android:alpha="0.9"
                android:background="@drawable/input_bg"
                android:text="Editar"
                android:textColor="#AB966F"
                android:textSize="18sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="6dp"
                android:alpha="0.9"
                android:background="@drawable/input_bg"
                android:text="Eliminar"
                android:textColor="#AB966F"
                android:textSize="13sp"
                app:backgroundTint="@null" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>